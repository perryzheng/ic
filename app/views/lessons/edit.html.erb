<h1>Edit Lesson</h1>

<%= form_for(@lesson) do |f|	%>
	<%= render 'shared/error_messages', :object => f.object %>
	<p><%= f.label :title, "Lesson Title" %><br />
	<%= f.text_field :title %></p>

	<p><%= f.label	:lesson_content %><br />
	<%= f.text_area :lesson_content %></p>

	<%= f.fields_for :bullet_points do |bullet_point| %>
	<p>	<%= render 'bullet_point_fields', :f => bullet_point %></p>
	<% end %>
	
	<%= f.submit "Edit lesson" %>
	<br />
<% end %>

