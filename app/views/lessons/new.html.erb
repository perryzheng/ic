<h1>Create a new lesson</h1>

<%= form_for(@lesson) do |f|	%>
	<%= render 'shared/error_messages', :object => f.object %>
	<p><%= f.label :title, "Lesson Title" %><br />
	<%= f.text_field :title %></p>

	<p><%= f.label	:lesson_content %><br />
	<%= f.text_area :lesson_content %></p>

	<%= f.submit "Create a lesson" %>
	<br />
<% end %>
