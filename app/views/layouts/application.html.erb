<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div data-role="page">
      <%= render :partial => 'layouts/header' %>

		<% flash.each do |key, value| %>
		<%= content_tag(:div, value, :class => "flash #{key}") %>
		<% end %>
       	<%= yield %>

      <%= render "layouts/footer" %>
      <%= debug(params) if Rails.env.development? %>
    </div>
	<%= render "layouts/gascript" %>
</body>
</html>

