<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <p>
    <%= f.label :first_name, "First name (what you like to be called)" %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name, "Last name" %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :name, "Full name"%><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Password confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :phone, "Phone #" %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :country, "Country" %> <br />
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :start_date, "When you arrive at Seattle?(mm/dd/yyyy)" %> <br />
    <%= f.text_field :start_date %>
  </p>
  <p>
    <%= f.label :end_date, "When you plan on leaving?(mm/dd/yyyy)" %> <br />
    <%= f.text_field :end_date %>
  </p>
  <p>
    <%= f.label :esl, "ELP student? (yes or no)" %> <br />
    <%= f.text_field :esl %>
  </p>
  <p>
    <%= f.label :english_help, "Help in English? (yes or no)" %> <br />
    <%= f.text_field :english_help %>
  </p>
  <p>
    <%= f.label :living_help, "Help with moving? (yes or no)" %> <br />
    <%= f.text_field :living_help %>
  </p>
  <p>
    <%= f.label :fun_help, "Looking for communities and events? (yes or no)" %> <br />
    <%= f.text_field :fun_help %>
  </p>
  <p>
    <%= f.label :notes, "Any comments or questions?" %> <br />
    <%= f.text_area :notes %>
  </p>
  <%= f.submit "Update" %>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails" TARGET="_blank" >change picture</a>
</div>
<br />
