<br />
<ul data-role="listview" data-split-theme="d" data-split-icon="delete">
	<li>
		<a href="<%= feed_item.user %>">
		<%= gravatar_for feed_item.user, :size => 80 %>
		<h3><%= feed_item.user.name %>: 
		<%= feed_item.content %></h3>
		<p>Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</p>
		</a>
		<% if current_user?(feed_item.user) %>
			<%= link_to "delete", feed_item, :method => :delete,
			                                     :confirm => "You sure?",
			                                     :title => feed_item.content %>
		<% end %>
	<li>
</ul>